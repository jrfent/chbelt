<%= form_for @product, html: { multipart: true } do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label "Product Name" %>
    <%= f.text_field :pname, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :label %> 
	<%= f.text_field :label, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :grade %> 
	<%= f.text_field :grade, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :pack_size %> 
	<%= f.text_field :pack_size, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label "Category" %>
  <% options = options_from_collection_for_select(Category.all, 'id', 'description') %>
  <%= f.select :category_id, options, :input_html => { class: "form-control" } %>
  </div>
  <div class="form-group">
  <%= f.label "Sub-Category" %>
  <% options = options_from_collection_for_select(Subcategory.all.order("category_id", "description"), 'id', 'description') %>
  <%= f.select :subcategory_id, options, :input_html => { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :document %>
    <%= f.file_field :document, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>